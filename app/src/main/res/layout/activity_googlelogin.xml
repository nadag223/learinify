<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".GoogleloginActivity">

    <!-- רקע גרדיאנט -->
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_gradient" />

    <!-- כרטיס לוגין -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- לוגו / כותרת -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learinify"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/appSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ברוכים הבאים חזרה"
                android:textSize="14sp"
                android:textColor="#9CA3AF"
                android:textAlignment="center"
                android:layout_marginBottom="30dp" />

            <!-- שדה אימייל -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="אימייל"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="example@gmail.com"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edit_text_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:textColorHint="#D1D5DB" />

            </LinearLayout>

            <!-- שדה סיסמה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="סיסמה"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="••••••••"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:textColorHint="#D1D5DB" />

            </LinearLayout>

            <!-- כפתור התחברות -->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="התחבר"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_gradient_bg"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- שכחת סיסמה -->
            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="שכחתי סיסמה"
                android:textSize="12sp"
                android:textColor="#2563EB"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- קו הפרדה -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginVertical="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#D1D5DB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="או"
                    android:textSize="12sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginHorizontal="12dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#D1D5DB" />

            </LinearLayout>

            <!-- כפתורי התחברות חברתיים -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/googleLoginButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Google"
                    android:textSize="12sp"
                    android:background="@drawable/social_button_bg"
                    android:textColor="#374151" />

                <Button
                    android:id="@+id/facebookLoginButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Facebook"
                    android:textSize="12sp"
                    android:background="@drawable/social_button_bg"
                    android:textColor="#374151" />

            </LinearLayout>

            <!-- רישום -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="עדיין אין לך חשבון? "
                    android:textSize="12sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/registerLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הרשמ/י עכשיו"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2563EB"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>